{
  "name": "unilint",
  "version": "1.0.0",
  "description": "A unified linting tool that checks JavaScript and CSS for web feature baseline compatibility",
  "type": "module",
  "main": "src/index.js",
  "bin": {
    "unilint": "./bin/unilint.js"
  },
  "scripts": {
    "test": "node tests/test-runner.js",
    "test:unit": "node tests/test-runner.js --unit-only",
    "test:validation": "node tests/test-runner.js --validation-only",
    "test:integration": "node tests/test-runner.js --integration-only",
    "test:performance": "node tests/test-runner.js --performance-only",
    "test:help": "node tests/test-runner.js --help",
    "dev": "node bin/unilint.js",
    "lint": "node bin/unilint.js .",
    "lint:js": "node bin/unilint.js --js-only .",
    "lint:css": "node bin/unilint.js --css-only .",
    "lint:errors": "node bin/unilint.js --baseline false .",
    "lint:verbose": "node bin/unilint.js --verbose .",
    "lint:json": "node bin/unilint.js --format json .",
    "lint:compact": "node bin/unilint.js --format compact .",
    "build": "echo 'No build step required for CLI tool'",
    "prepublishOnly": "npm test",
    "postinstall": "echo 'Unilint installed successfully! Run: npx unilint --help'"
  },
  "keywords": ["lint", "baseline", "compatibility", "web-features", "eslint", "csslint", "cli"],
  "author": "(Dada) Nikhil Simon Toppo , (Hecker) Abhishek Joshi",
  "license": "ISC",
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "csslint-baseline": "^1.0.5-baseline.1",
    "web-features": "^3.1.0",
    "commander": "^12.0.0",
    "chalk": "^5.3.0",
    "glob": "^10.3.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "browserslist": "^4.26.2",
    "eslint": "^9.36.0",
    "eslint-plugin-compat": "^6.0.2",
    "globals": "^16.4.0"
  }
}
